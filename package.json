{
  "name": "rrc-contracts",
  "scripts": {
    "build": "hardhat compile  --network abstractMainnet",
    "deploy": "hardhat deploy-zksync --script deploy.ts --network abstractTestnet",
    "deploy-redeem": "hardhat deploy-zksync --script deploy-redeem.ts --network abstractMainnet",
    "deploy-nft": "hardhat deploy-zksync --script deploy-nft.ts --network abstractTestnet",
    "deploy-badges": "hardhat deploy-zksync --script deploy-badges.ts --network abstractTestnet",
    "deploy-inventory": "DEPLOY_ENV=dev3 hardhat deploy-zksync --script deploy-inventory.ts --network abstractTestnet",
    "deploy-shop-reactor": "DEPLOY_ENV=dev3 hardhat deploy-zksync --script deploy-shop-reactor.ts --network abstractTestnet",
    "deploy-grid": "hardhat deploy-zksync --script deploy-grid.ts --network abstractMainnet",
    "deploy-claimer": "DEPLOY_ENV=dev3 hardhat deploy-zksync --script deploy-claimer.ts --network abstractTestnet",
    "deploy-test-contracts": "hardhat deploy-zksync --script deploy-test-contracts.ts --network abstractTestnet",
    "sync-shop-lots": "DEPLOY_ENV=dev hardhat deploy-zksync --script sync-shop-lots.ts --network abstractTestnet",
    "test": "hardhat test --network hardhat"
  },
  "devDependencies": {
    "@matterlabs/hardhat-zksync": "1.3.0",
    "@matterlabs/hardhat-zksync-verify": "^1.9.1",
    "@matterlabs/zksync-contracts": "0.6.1",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "ethers": "^6.13.5",
    "hardhat": "^2.22.18",
    "zksync-ethers": "^6.15.3"
  },
  "dependencies": {
    "@matterlabs/hardhat-zksync-ethers": "^1.3.0"
  }
}
